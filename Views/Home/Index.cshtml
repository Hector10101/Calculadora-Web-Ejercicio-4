@model Operaciones

@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center">
    <h1 class="display-4">Calculadora Web</h1>
    <p>Operaciones Basicas</p>
</div>

<div class="form-group row">
    <div class="col-md-5">
        <form method="post">

            <div class="form-group">
                <label asp-for="Valor1" class="control-label">Primer Valor</label>
                <input asp-for="Valor1" class="form-control" required />
                <span asp-validation-for="Valor1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor2" class="control-label">Segundo Valor</label>
                <input asp-for="Valor2" class="form-control" required />
                <span asp-validation-for="Valor2" class="text-danger"></span>
            </div>
            <div class="col-5">

                <input type="radio" value="+" name="Funtion" required /><label class="font-weight-bold"> Sumar</label><br />
                <input type="radio" value="-" name="Funtion" required /><label class="font-weight-bold"> Restar</label><br />
                <input type="radio" value="*" name="Funtion" required /><label class="font-weight-bold"> Multiplicar</label><br />
                <input type="radio" value="/" name="Funtion" required /><label class="font-weight-bold"> Dividir</label><br />

            </div>


            <div class="form-group">
                <button type="submit" class="btn btn-primary">Calcular</button>
            </div>
        </form>
    </div>
    <div class="col-md-5 ">

        <h5 class="alert-primary">El Resultado es: @ViewData["Resultado"]</h5>
        <hr />
    </div>
</div>




